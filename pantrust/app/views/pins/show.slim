h3 = @pin.title
p = @pin.description
p = @pin.user.email
= image_tag(@pin.photo)

= link_to "upvote", like_pin_path(@pin), method: :put
= @pin.get_upvotes.size
= link_to "downvote", dislike_pin_path(@pin), method: :put
= @pin.get_downvotes.size

- if user_signed_in?
  ul.links
    li = link_to 'Edit pin', edit_pin_path(@pin), class: 'btn btn-default'
    li = link_to 'Delete pin', pin_path(@pin), method: :delete, class: 'btn btn-danger'

.internal-links
  = link_to 'Back to Pinboard', pins_path
